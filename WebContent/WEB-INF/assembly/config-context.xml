<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		   http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-4.0.xsd">
	
	<context:property-placeholder location="classpath:config.properties" ignore-unresolvable="true" />           
 	<bean id="config" class="com.coe.wms.util.Config">
 			<!-- cookie过期时间配置 -->
			<property name="cookieMaxAgeLoginName" >
				<value>${cookie.maxAge.loginName}</value>
			</property>
			
			<property name="cookieMaxAgeLoginPassword">
				<value>${cookie.maxAge.loginPassword}</value>
			</property>
			
			<property name="cookieMaxAgeRememberMe">
				<value>${cookie.maxAge.rememberMe}</value>
			</property>
			<!-- session过期时间配置 -->
			<property name="sessionMaxInactiveInterval">
				<value>${session.maxInactiveInterval}</value>
			</property>
	</bean>
</beans>